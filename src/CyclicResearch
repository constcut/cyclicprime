
from Rational import Rational
from Primes import Primes

primes = Primes()
r = Rational()

for P in primes.getPrimesList(2, 12): # get primitive roots for X в нашем случае P

    print("P", P)

    for base in range(2, P*2 + 1): #TODO function to jump on prime roots + N*P: speedup

        r.calc(1, P, base)
        period = r.getPeriod()
        
        if (period == P - 1):

            d = r.digitSpectrum()
            pos = 0

            print("period", period)
            print("Base ", base)

            for L in range(0, P):
                count = 0

                for i in range(pos, len(d)):

                    pos = i
                    if d[i] == 0:
                        count += 1
                    else:
                        break
                
                pos += 1

                print("L", L, " = ", count)


print ("Done")